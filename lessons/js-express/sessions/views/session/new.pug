extends ../layouts/app.pug

block content
  // BEGIN (write your solution here)
  .row.mt-3
    .col-sm-4.mx-auto
      h3.text-xs-center Sign in
      form(action='/session' method='post')
        .row.form-group
          .col-sm
            input.form-control(name='nickname' placeholder='nickname' value=form.nickname)
            if errors.nickname
              .text-warning= errors.nickname
        .row.form-group
          .col-sm
            input.form-control(name='password' type='password' placeholder='password')
            if errors.password
              .text-warning= errors.password
        .form-group
          button.btn.btn-success.btn-block(type='submit') Sign in
  // END